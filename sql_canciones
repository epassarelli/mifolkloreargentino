INSERT INTO canciones (	
	id_anterior, 
	inte_id, 
	canc_titulo, 
	canc_alias, 
	canc_contenido, 
	canc_youtube,
	canc_spotify, 
	canc_visitas, 
	user_id, 
	canc_habilitado)
SELECT 	
	c.canc_id, 
	IFNULL(ic.inte_id, 0) AS inte_id, 
	c.canc_titulo, 
	c.canc_alias, 
	c.canc_contenido, 
	v.vide_codigo,
	'',
	c.canc_visitas,
	c.user_id, 
	c.canc_habilitado
FROM cancion c
LEFT OUTER JOIN interprete_cancion ic ON c.canc_id = ic.canc_id
LEFT OUTER JOIN video v ON c.canc_id = v.canc_id AND ic.inte_id = v.inte_id


CREATE TABLE `canciones` (
  `canc_id` int(11) NOT NULL,
  `id_anterior` int(11) NOT NULL,
  `inte_id` int(11) NOT NULL,
  `canc_titulo` varchar(50) NOT NULL,
  `canc_alias` varchar(50) NOT NULL,
  `canc_contenido` text NOT NULL,
  `canc_youtube` varchar(11) DEFAULT NULL,
  `canc_spotify` varchar(22) DEFAULT NULL,
  `canc_visitas` int(11) NOT NULL DEFAULT '0',
  `user_id` int(11) NOT NULL DEFAULT '1',
  `canc_habilitado` tinyint(1) NOT NULL DEFAULT '0'
) ENGINE=InnoDB DEFAULT CHARSET=utf8
